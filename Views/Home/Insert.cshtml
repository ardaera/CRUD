
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Favicon/ardalan.png" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/css/ErrorMessage.css" rel="stylesheet" />
</head>
<body>
    @model CustomerViewModel
    <div class="container col-md-4 mt-5 mb-5 p-4" style="border:5px solid green;border-radius:10px;">
        <h2 class="text-center bg-warning pb-1 text-white">Insert Customer Form</h2>
        <form class="mt-5" asp-controller="Home" asp-action="InsertConfirm">
            <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" asp-for="Firstname" />
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" asp-for="Lastname" />
            </div>
            <div class="form-group">
                <label>Date of Birth:</label>
                <input type="date" class="form-control" asp-for="DateOfBirth" />
            </div>
            <div class="form-group">
                <label>Mobile Number:</label>
                <input class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label>Bank Account Number:</label>
                <input class="form-control" asp-for="BankAccountNumber" />
                <span asp-validation-for="BankAccountNumber"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success btn-block mt-4">Add Customer</button>
            </div>
        </form>
        <div>
            <a href="/Home/CustomersList" class="btn btn-info btn-block mt-4">View Customers</a>
        </div>
    </div>
    <!--Modal-->
    @if (TempData["modalmsg"] != null)
    {
        <div class="modal fade" id="modalshowmsg">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header row-cols-2">
                        <div class="d-flex justify-content-start">
                            <label style="text-align:justify; font-weight:bold">@TempData["modalmsg"]</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center p-2">
                        <button class="btn btn-success w-100" data-dismiss="modal">Done</button>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (TempData["modalmsg2"] != null)
    {
        <div class="modal fade" id="modalshowmsg">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header row-cols-2">
                        <div class="d-flex justify-content-start">
                            <label style="text-align:justify; font-weight:bold">@TempData["modalmsg2"]</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center p-2">
                        <button class="btn btn-danger w-100" data-dismiss="modal">Done</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <script>
        $(modalshowmsg).modal()
    </script>
</body>
</html>
