
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customers View Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Favicon/ardalan.png" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/css/ErrorMessage.css" rel="stylesheet" />
</head>
<body>
    @model List<Customer>
    <div class="container col-10 mt-5">
        <h2 class="text-center bg-warning pb-1 text-white">Customers View</h2>
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>FIRST NAME</th>
                    <th>LAST NAME</th>
                    <th>DATE OF BIRTH</th>
                    <th>MOBILE NUMBER</th>
                    <th>EMAIL</th>
                    <th>BANK ACCOUNT NUMBER</th>
                    <th>REMOVE</th>
                    <th>EDIT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @item.Firstname
                        </td>
                        <td>
                            @item.Lastname
                        </td>
                        <td>
                            @Html.Label(item.DateOfBirth.ToShortDateString())
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.BankAccountNumber
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-route-Id="@item.Id" asp-action="RemoveConfirm" asp-controller="Home">Remove</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-route-Id="@item.Id" asp-action="Edit" asp-controller="Home">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a href="/Home/Insert" class="btn btn-info btn-block mt-4">Go To Insert Page</a>
        </div>
    </div>
    <!--Modal-->
    @if (TempData["modalmsg"] != null)
    {
        <div class="modal fade" id="modalshowmsg">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header row-cols-2">
                        <div class="d-flex justify-content-start">
                            <label style="text-align:justify; font-weight:bold">@TempData["modalmsg"]</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center p-2">
                        <button class="btn btn-success w-100" data-dismiss="modal">Done</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <script>
        $(modalshowmsg).modal()
    </script>
</body>
</html>
