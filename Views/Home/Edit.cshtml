
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Customer Page</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Favicon/ardalan.png" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/css/ErrorMessage.css" rel="stylesheet" />
</head>
<body>
    @{Customer customer = ViewData["Customer"] as Customer; }
    @model CustomerViewModel
    <div class="container col-md-4 mt-5 mb-5 p-4" style="border:5px solid green;border-radius:10px;">
        <h2 class="text-center bg-warning pb-1 text-white">Edit Customer</h2>
        <form class="mt-5" asp-controller="Home" asp-action="Update">
            <div class="form-group">
                <label>First Name:</label>
                <input value="@customer.Firstname" class="form-control" asp-for="Firstname" />
                <input type="hidden" value="@customer.Id" class="form-control" asp-for="Id" />
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input value="@customer.Lastname" class="form-control" asp-for="Lastname" />
            </div>
            <div class="form-group">
                <label>Date of Birth:</label>
                <input value="@Html.Raw(customer.DateOfBirth.ToShortDateString())" type="text" class="form-control" asp-for="DateOfBirth" onfocus="(this.type='date')" />
            </div>
            <div class="form-group">
                <label>Mobile Number:</label>
                <input value="@customer.PhoneNumber" class="form-control" asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input value="@customer.Email" type="email" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label>Bank Account Number:</label>
                <input value="@customer.BankAccountNumber" class="form-control" asp-for="BankAccountNumber" />
                <span asp-validation-for="BankAccountNumber"></span>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success btn-block mt-4">Update Customer</button>
            </div>
        </form>
        <div>
            <a href="/Home/CustomersList" class="btn btn-danger btn-block mt-4">Cancel</a>
        </div>
    </div>
</body>
</html>
